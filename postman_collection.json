{
  "info": {
    "name": "Invoice Generator API",
    "description": "Complete collection for Invoice Generator API with examples",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "invoice_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    console.log('User registered successfully');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"username\": \"testuser\",\n  \"password\": \"testpass123\",\n  \"full_name\": \"Test User\",\n  \"company_name\": \"Test Company\",\n  \"phone\": \"+212600000000\",\n  \"address\": \"123 Test St, Casablanca\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', jsonData.access_token);",
                  "    console.log('Token saved:', jsonData.access_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpass123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Invoices",
      "item": [
        {
          "name": "Create Invoice (Arabic)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('invoice_id', jsonData.id);",
                  "    console.log('Invoice created:', jsonData.invoice_number);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client_name\": \"شركة المثال\",\n  \"client_email\": \"client@example.com\",\n  \"client_phone\": \"+212600123456\",\n  \"client_address\": \"الدار البيضاء، المغرب\",\n  \"language\": \"ar\",\n  \"currency\": \"MAD\",\n  \"items\": [\n    {\n      \"name\": \"تطوير موقع ويب\",\n      \"description\": \"موقع تجارة إلكترونية\",\n      \"quantity\": 1,\n      \"price\": 15000\n    },\n    {\n      \"name\": \"تحسين محركات البحث\",\n      \"description\": \"خدمة SEO لمدة 3 أشهر\",\n      \"quantity\": 3,\n      \"price\": 2000\n    }\n  ],\n  \"tax_rate\": 20,\n  \"discount_rate\": 10,\n  \"due_date\": \"2025-11-01T00:00:00\",\n  \"notes\": \"الدفع خلال 30 يوماً\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/invoices/generate",
              "host": ["{{base_url}}"],
              "path": ["invoices", "generate"]
            }
          }
        },
        {
          "name": "Create Invoice (English)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client_name\": \"ACME Corporation\",\n  \"client_email\": \"billing@acme.com\",\n  \"client_phone\": \"+1234567890\",\n  \"client_address\": \"123 Business Ave, New York, USA\",\n  \"language\": \"en\",\n  \"currency\": \"USD\",\n  \"items\": [\n    {\n      \"name\": \"Web Development\",\n      \"description\": \"E-commerce platform\",\n      \"quantity\": 1,\n      \"price\": 5000\n    },\n    {\n      \"name\": \"Maintenance\",\n      \"description\": \"Monthly maintenance\",\n      \"quantity\": 12,\n      \"price\": 200\n    }\n  ],\n  \"tax_rate\": 10,\n  \"discount_rate\": 5,\n  \"notes\": \"Net 30 payment terms\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/invoices/generate",
              "host": ["{{base_url}}"],
              "path": ["invoices", "generate"]
            }
          }
        },
        {
          "name": "Get Invoice",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/invoices/{{invoice_id}}",
              "host": ["{{base_url}}"],
              "path": ["invoices", "{{invoice_id}}"]
            }
          }
        },
        {
          "name": "List Invoices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/invoices?page=1&page_size=10",
              "host": ["{{base_url}}"],
              "path": ["invoices"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "draft",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Download Invoice PDF",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/invoices/{{invoice_id}}/download",
              "host": ["{{base_url}}"],
              "path": ["invoices", "{{invoice_id}}", "download"]
            }
          }
        },
        {
          "name": "Send Invoice by Email",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Thank you for your business! Please find your invoice attached.\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/invoices/{{invoice_id}}/send-email",
              "host": ["{{base_url}}"],
              "path": ["invoices", "{{invoice_id}}", "send-email"]
            }
          }
        },
        {
          "name": "Update Invoice",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"paid\",\n  \"notes\": \"Payment received via bank transfer\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/invoices/{{invoice_id}}",
              "host": ["{{base_url}}"],
              "path": ["invoices", "{{invoice_id}}"]
            }
          }
        },
        {
          "name": "Delete Invoice",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/invoices/{{invoice_id}}",
              "host": ["{{base_url}}"],
              "path": ["invoices", "{{invoice_id}}"]
            }
          }
        }
      ]
    },
